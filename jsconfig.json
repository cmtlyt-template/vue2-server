{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "baseUrl": "./",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["src/*"],
      "@cmp/*": ["src/components"],
      "@img/*": ["src/assets/images"],
      "@view/*": ["src/views"],
      "@conf/*": ["src/config"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  }
}
